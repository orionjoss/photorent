<div class="container">
  <h1>Dashboard</h1>
    <h2>My Cameras</h2>
      <p><%= current_user.first_name if user_signed_in?%>'s <mark>owned</mark> cameras </p>
        <li>
          <% current_user.cameras.each do |camera|%>
          <%= camera.camera_type + " | " + camera.brand + " | "%>
          <% camera.bookings.each do |booking|%>
          <%=booking.status%>
                <%=button_to "✅ Approve", accept_camera_booking_path(:camera_id => booking.camera, :id => booking), method: :patch, class: "btn btn-outline-success" %>
                <%=button_to "❌ Reject", decline_camera_booking_path(:camera_id => booking.camera, :id => booking), method: :patch, class: "btn btn-outline-danger" %>
              <% end %>
            <% end %>
        </li>
<div><%=link_to "+ Add", new_camera_path, class: "btn btn-outline-success" %></div>

    <h2>My Bookings</h2>
        <p><%= current_user.first_name if user_signed_in?%>'s <mark>rented</mark> cameras </p>
          <li>
              <% current_user.bookings.each do |booking|%>
              <%= booking.camera.camera_type + " | " + booking.camera.brand + " | " + "Start Date: " + booking.start_date.to_s + " | " + "End Date: " + booking.end_date.to_s + " | " + booking.status + " by " + booking.camera.user.first_name %>
              <% end %>
          </li>
</div>
