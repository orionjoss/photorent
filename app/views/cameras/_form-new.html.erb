<%= simple_form_for(@camera) do |form| %>

  <div class="form-inputs">
    <%= form.input :brand, collection: %w[Nikon Canon Sony Olympus Leica Polaroid Instax], prompt: "Choose the brand of your camera"%>
    <%= form.input :camera_type, collection: %w[DSL Mirrorless Compact Film Instant], prompt: "Choose the type of camera" %>
    <%= form.input :address,
    input_html: {data: {address_autocomplete_target: "address"}},
    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
    <%= form.input :photo, as: :file %>

  </div>

  <div class="form-actions mt-4">
    <%= form.button :submit, '^ Upload your camera', :class => "btn btn-sm form-btn-new" %> <%= link_to "> Back to listings", cameras_path, :class => "btn btn-outline-light btn-sm form-btn-back" %>
  </div>
<% end %>
